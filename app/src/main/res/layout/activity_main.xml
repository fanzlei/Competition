<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fanz.competition.activity.student.Main">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:background="@color/top_bar">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="竞赛王"
            style="@style/top_bar_text"/>
    </LinearLayout>
    <cn.bingoogolapple.bgamenu.BGAMenu
        android:id="@+id/menu"
        style="@style/MatchAuto"
        app:bgamenu_menuWidth="200dp"
        app:bgamenu_showMode="pullOut"
        >
        <LinearLayout
            style="@style/MatchMatch.Horizontal">
            <include layout="@layout/menu"/>
            <LinearLayout
                style="@style/MatchMatch.Vertical"
                android:background="#fff">
                <include layout="@layout/main"/>
            </LinearLayout>
        </LinearLayout>

    </cn.bingoogolapple.bgamenu.BGAMenu>

</LinearLayout>
