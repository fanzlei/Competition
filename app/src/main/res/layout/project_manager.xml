<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#8d9">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="项目管理"
        android:textSize="28sp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/project_manager_title"
        android:text="项目名称"
        android:textSize="25sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:id="@+id/project_manager_profile"
        android:textSize="20sp"
        android:text="简介"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/project_manager_date"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:text="开始：2014-01-01 结束：2014-03-01"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="获奖信息"
        android:id="@+id/project_manager_rewards"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="参赛学生："/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/project_manager_student_list"/>
</LinearLayout>